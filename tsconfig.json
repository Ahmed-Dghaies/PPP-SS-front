{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],

    "baseUrl": "src",
    "paths": {
      "@ComIndex/*": ["app/Components/parameters/index/index-list/*"],
      "@ComDistributeur/*": ["app/Components/parameters/distributeur/distributeur-list/*"],
      "@ComReleveIndex/*": ["app/Components/home/Recette/releveIndex-list/*"],
      "@ComCardType/*": ["app/Components/parameters/Carte Bon/card-type-list/*"],
      "@ComCiterne/*": ["app/Components/parameters/citerne/citerne-list/*"],
      "@ComClient/*": ["app/Components/parameters/client/client-list/*"],
      "@ComShared/*": ["app/Components/Shared/*"],
      "@ComCarburant/*": ["app/Components/parameters/prixCarburant/prix-carburant-list/*"]
    }
  }
}
